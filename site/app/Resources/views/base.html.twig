<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- start: Mobile Specific -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- end: Mobile Specific -->

        <!-- start: CSS -->
        <link id="bootstrap-style" href="{{ asset('bundles/umgconferencia/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/umgconferencia/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
        <link id="base-style" href="{{ asset('bundles/umgconferencia/css/style.css') }}" rel="stylesheet">
        <link id="base-style-responsive" href="{{ asset('bundles/umgconferencia/css/style-responsive.css') }}" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css'>
        <!-- end: CSS -->
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{path('home')}}"><span>UMG - conferencias</span></a>
                <!-- start: Header Menu -->
                <div class="nav-no-collapse header-nav">
                    <ul class="nav pull-right">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="halflings-icon white user"></i> {{ app.user.username }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-menu-title">
                            <span>Account Settings</span>
                            </li>
                            <li><a href="{{path('fos_user_security_logout')}}"><i class="halflings-icon off"></i> Cerrar sesión</a></li>
                        </ul>
                        </li>
                        <!-- end: User Dropdown -->
                    </ul>
                </div>
                <!-- end: Header Menu -->

            </div>
        </div>
    </div>
    <!-- start: Header -->

    <div class="container-fluid-full">
        <div class="row-fluid">
            <!-- start: Main Menu -->
            <div id="sidebar-left" class="span2">
                <div class="nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li><a href="{{path('home')}}"><i class="icon-bar-chart"></i><span class="hidden-tablet"> Dashboard</span></a></li>
                        <li><a href="{{path('evento')}}"><i class="icon-tasks"></i><span class="hidden-tablet"> Eventos</span></a></li>
                        <li><a href="{{path('conferencista')}}"><i class="icon-tasks"></i><span class="hidden-tablet"> Conferencistas</span></a></li>
                        <li><a href="{{path('pagoeventos')}}"><i class="icon-picture"></i><span class="hidden-tablet"> Recibir pagos</span></a></li>
                        <li><a href="{{path('alumnopago')}}"><i class="icon-eye-open"></i><span class="hidden-tablet"> Pagos de alumnos</span></a></li>
                        <li><a href="{{path('alumno')}}"><i class="icon-list-alt"></i><span class="hidden-tablet"> Alumnos</span></a></li>
                    </ul>
                </div>
            </div>
            <!-- end: Main Menu -->

            <noscript>
                <div class="alert alert-block span10">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
                </div>
            </noscript>

            <!-- start: Content -->
            <div id="content" class="span10">
                <div class="row-fluid">
                    {% block body %}{% endblock %}
                    <div class="clearfix"></div>
                </div><!--/row-->
            </div><!--/.fluid-container-->

            <!-- end: Content -->
        </div><!--/#content.span10-->
    </div><!--/fluid-row-->

    <div class="modal hide fade" id="myModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Settings</h3>
        </div>
        <div class="modal-body">
            <p>Here settings can be configured...</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save changes</a>
        </div>
    </div>
    <div class="clearfix"></div>
    <!-- start: JavaScript-->
    <script src="{{ asset('bundles/umgconferencia/js/jquery-1.9.1.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery-migrate-1.0.0.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery-ui-1.10.0.custom.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.ui.touch-punch.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/modernizr.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.cookie.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/fullcalendar.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/excanvas.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.flot.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.flot.pie.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.flot.stack.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.flot.resize.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.chosen.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.uniform.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.cleditor.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.noty.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.elfinder.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.raty.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.iphone.toggle.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.uploadify-3.1.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.gritter.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.imagesloaded.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.masonry.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.knob.modified.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/jquery.sparkline.min.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/counter.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/retina.js') }}"></script>
    <script src="{{ asset('bundles/umgconferencia/js/custom.js') }}"></script>
    <!-- end: JavaScript-->
    {% block javascripts %}{% endblock %}
    </body>
</html>
