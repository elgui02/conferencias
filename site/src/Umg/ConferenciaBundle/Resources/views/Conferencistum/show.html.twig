{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{entity.Nombre}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.Nombre }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ entity.Correo }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ entity.Telefono }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.Observaciones }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('conferencista') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('conferencista_edit', { 'id': entity.id }) }}" class="btn">
            Editar
        </a>
    </li>
</ul>
{% endblock %}
