{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recuerdo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Recuerdo</th>
                <td>{{ entity.Recuerdo }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.Observaciones }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ entity.Cantidad }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('recuerdo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('recuerdo_edit', { 'id': entity.id }) }}">
