{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recuerdo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Recuerdo</th>
                <th>Observaciones</th>
                <th>Cantidad</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('recuerdo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.Recuerdo }}</td>
                <td>{{ entity.Observaciones }}</td>
                <td>{{ entity.Cantidad }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('recuerdo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('recuerdo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('recuerdo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
